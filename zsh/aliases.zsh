alias reload!='. ~/.zshrc'

# vim
alias v="vim -N"

# debian
alias update="sudo apt-get update && sudo apt-get upgrade"
alias install="sudo apt-get install"
alias remove="sudo apt-get autoremove"

# git
alias ga="git add"
alias gs="git status"
alias gp="git push"
alias gc="git commit"

# ls
alias ls="ls --color=auto"
alias ll="ls -alF"
alias la="ls -A"
alias  l="ls -CF"
